DJANGO_SECRET_KEY=replace-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=*

# Comma-separated
CORS_ALLOWED_ORIGINS=http://localhost:3000

# -----------------------------
# NO-DOCKER QUICKSTART (local)
# -----------------------------
# Use SQLite locally so you don't need Postgres:
USE_SQLITE=1

# Run Celery tasks inline so you don't need Redis/Celery locally:
CELERY_TASK_ALWAYS_EAGER=1

# -----------------------------
# DOCKER / PRODUCTION (optional)
# -----------------------------
# Postgres (docker-compose defaults)
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Celery / Redis (docker-compose defaults)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Vultr Object Storage (S3-compatible)
S3_ENDPOINT_URL=https://<region>.vultrobjects.com
S3_REGION_NAME=us-east-1
S3_BUCKET_NAME=your-bucket
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret

# AI
TL_API_KEY=
TL_INDEX_ID=

# Gemini
AI_PROVIDER=gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

